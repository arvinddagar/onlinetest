<div class="container">
  <div class="page-header">
    <h1></h1>
  </div>
  <div class="row">
    <div class="span6 offset3">
      <h4 class="widget-header">Sign in</h4>
      <div class="widget-body">
        <div class="center-align">

         <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class=>'form-horizontal form-signin-signup'}) do |f| %>
            <%= f.email_field :email, autofocus: true , :placeholder=>'email' , :style=>'width: 70%;height: 30px;'%>
            <%= f.password_field :password, autocomplete: "off" , :placeholder=> 'password' %>
            <div>
               <%= f.submit "Sign in" , :class=>"btn btn-primary btn-large" %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <%end%>
          <% end %>
          <h4> New User?</h4>
          <%= link_to 'Sign up' , new_user_registration_path , :class=>"btn btn-large bottom-space" %>
          
        </div>
      </div>
    </div>
  </div>
</div>

