<div class="container">
  <div class="page-header">
    <h1></h1>
  </div>
  <div class="row">
    <div class="span6 offset3">
      <h4 class="widget-header"> Sign up</h4>
      <div class="widget-body">
        <div class="center-align">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name) , :html => {:class=>'form-horizontal form-signin-signup'}) do |f| %>
            <%= f.email_field :email, autofocus: true , :placeholder=>'Email' , :style=>'width: 70%;height: 30px;'%>
            <%= f.password_field :password, autocomplete: "off" , :placeholder=> 'Password' %>
            <%= f.password_field :password_confirmation, autocomplete: "off" , :password=>'Password Confirmation' , placeholder: 'Password confirmation'  %><br><br>
            <%= f.text_field :name , :placeholder=> 'Name' %>
            <%= f.text_field :phone , :placeholder=> 'Phone' %>

            <div>
               <%= f.submit "Sign up" , :class=>"btn btn-primary btn-large" %>
            </div>
          <%end%>
          
          <h4>Already have an account?</h4>
          <%= link_to 'Sign In' , new_user_session_path , :class=>"btn btn-large bottom-space" %>
          
        </div>
      </div>
    </div>
  </div>
</div>
